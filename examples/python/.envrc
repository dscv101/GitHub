#!/usr/bin/env bash
# Python project .envrc example
# Copy this to your Python project root

# Use the Python development environment
use flake ..#devenv.python

# Python-specific environment variables
export PYTHONPATH="$PWD/src:$PWD"
export UV_CACHE_DIR="$PWD/.uv-cache"
export PYREFLY_CACHE_DIR="$PWD/.pyrefly_cache"
export PYTEST_CACHE_DIR="$PWD/.pytest_cache"

# Automatically activate virtual environment if it exists
if [[ -d ".venv" ]]; then
  # shellcheck source=/dev/null
  source .venv/bin/activate
fi

echo "üêç Python development environment loaded!"
echo "Available commands: py-init, py-install, py-test, py-lint, py-format, py-clean"
